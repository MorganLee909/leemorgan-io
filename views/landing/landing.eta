<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Lee Morgan</title>
        <link rel="stylesheet" href="/bundles/landing/css/landing.css">
        <link rel="icon" type="img/ico" href="images/favicon.ico">
        <link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.css">
    </head>
    <body>
        <div id="main">
            <header>
                <button id="projectsOpen" class="smallButton">Projects</button>

                <button id="blogOpen" class="smallButton">Blog</button>

                <button id="galleryOpen" class="smallButton">Gallery</button>

                <!-- <button class="smallButton">Learn</button> -->

                <!-- <button class="smallButton">Currency</button> -->
            </header>

            <div id="links">
                <a href="https://github.com/MorganLee909" class="smallButton">
                    <img src="/images/github.webp" alt="GitHub logo">
                    GitHub
                </a>

                <a href="https://linkedin.com/in/leemorgan.io" class="smallButton">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                        <rect x="2" y="9" width="4" height="12"></rect>
                        <circle cx="4" cy="4" r="2"></circle>
                    </svg>
                    LinkedIn
                </a>

                <a href="https://bitchute.com/channel/Dn8vPaD4hqD6/" class="smallButton">
                    <img src="/images/bitchute.webp" alt="BitChute logo">
                    BitChute
                </a>

                <a href="https://rumble.com/user/LeeMorganIO" class="smallButton">
                    <img src="/images/rumble.webp" alt="Rumble logo">
                    Rumble
                </a>

                <a href="https://youtube.com/channel/UCjAUvyOuOEEXFr3K2oXldRg" class="smallButton">
                    <img src="/images/youtube.webp" alt="YouTube Logo">
                    YouTube
                </a>
            </div>

            <div id="mainContainer">
                <button id="menuButton">Menu</button>

                <button id="rightButton">Links</button>

                <h1>Lee Morgan</h1>
            </div>
        </div>

        <div id="projects" class="page" style="display:none">
            <%~ includeFile("../components/landingBackBtn.eta") %>

            <a class="project" href="https://thesubline.com">
                <h2>The Subline</h2>
                <img src="/images/subline.webp" alt="The Subline">
            </a>

            <a class="project" href="https://budgeteer.money">
                <h2>Budgeteer</h2>
                <img src="/images/budgeteer.webp" alt="Budgeteer">
            </a>

            <a class="project" href="/sudoku">
                <h2>Sudoku Solver</h2>
                <img src="/images/sudoku.webp" alt="Sudoku Solver">
            </a>

            <a class="project" href="/birthday">
                <h2>Birthday Paradox</h2>
                <img src="/images/birthday.webp" alt="Birthday Project">
            </a>

            <a class="project" href="https://blacklist.aero">
                <h2>Blacklist.aero</h2>
                <img src="/images/blacklist.webp" alt="Blacklist.aero">
            </a>
        </div>

        <div id="blog" class="page" style="display:none">
            <%~ includeFile("../components/landingBackBtn.eta") %>

            <% for(let i = 0; i < it.blogs.length; i++){ %>
                <a class="blog" href="/blog/<%=it.blogs[i]._id%>">
                    <h3><%=it.blogs[i].title%></h3>

                    <img src="<%=it.blogs[i].thumbnail.link%>" alt="<%=it.blogs[i].thumbnail.name%>">
                </a>
            <% } %>
        </div>

        <div id="gallery" class="page" style="display:none">
            <%~ includeFile("../components/landingBackBtn.eta") %>

            <div id="galleryTags"></div>

            <div id="map"></div>
        </div>

        <script src="/bundles/landing/js/landing.js"></script>
    </body>
</html>