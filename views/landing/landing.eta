<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Lee Morgan</title>
        <link rel="stylesheet" href="/bundles/landing/css/landing.css">
        <link rel="icon" type="img/ico" href="images/favicon.ico">
    </head>
    <body>
        <div id="main">
            <header>
                <button id="projectsOpen" class="smallButton">Projects</button>

                <button id="blogOpen" class="smallButton">Blog</button>

                <!-- <button class="smallButton">Gallery</button> -->

                <!-- <button class="smallButton">Learn</button> -->

                <!-- <button class="smallButton">Currency</button> -->
            </header>

            <div id="mainContainer">
                <button id="menuButton">Menu</button>

                <button id="rightButton">Links</button>

                <h1>Lee Morgan</h1>
            
                <div id="centerContainer">
                    <p class="skill" style="opacity:1">JavaScript</p>

                    <p class="skill">HTML</p>

                    <p class="skill">CSS</p>

                    <p class="skill">Node.js</p>

                    <p class="skill">MongoDB</p>

                    <p class="skill">Linux Server Management</p>
                </div>
            </div>
        </div>

        <div id="projects" class="page" style="display:none">
            <%~ includeFile("../components/landingBackBtn.eta") %>

            <a class="project" href="https://thesubline.com">
                <h2>The Subline</h2>
                <img src="/images/subline.webp" alt="The Subline">
            </a>

            <a class="project" href="https://budgeteer.money">
                <h2>Budgeteer</h2>
                <img src="/images/budgeteer.webp" alt="Budgeteer">
            </a>

            <a class="project" href="/sudoku">
                <h2>Sudoku Solver</h2>
                <img src="/images/sudoku.webp" alt="Sudoku Solver">
            </a>

            <a class="project" href="/birthday">
                <h2>Birthday Paradox</h2>
                <img src="/images/birthday.webp" alt="Birthday Project">
            </a>

            <a class="project" href="https://blacklist.aero">
                <h2>Blacklist.aero</h2>
                <img src="/images/blacklist.webp" alt="Blacklist.aero">
            </a>
        </div>

        <div id="blog" class="page" style="display:none">
            <%~ includeFile("../components/landingBackBtn.eta") %>

            <% for(let i = 0; i < it.blogs.length; i++){ %>
                <a class="blog" href="/blog/<%=it.blogs[i]._id%>">
                    <h3><%=it.blogs[i].title%></h3>

                    <img src="<%=it.blogs[i].thumbnail.link%>" alt="<%=it.blogs[i].thumbnail.name%>">
                </a>
            <% } %>
        </div>

        <script src="/bundles/landing/js/landing.js"></script>
    </body>
</html>